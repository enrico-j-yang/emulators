@model EmulatorsRequester.Models.Battery

@{
    ViewData["Title"] = "Set Battery";
}
@section scripts
{
    <script type="text/javascript">
        $('input[type=text][name=MacAddress]').tooltip({
            placement: "right",
            trigger: "focus"
        });
        $('input[type=number][name=BatteryLevel]').tooltip({
            placement: "right",
            trigger: "focus"
        });
    </script>
}

<!DOCTYPE html>
<html>
<head>
    <meta name="Set Battery" content="width=device-width" />
    <title>Set Battery</title>
</head>

<body>
        
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @using (Html.BeginForm("SetBattery", "Scoville", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0" class="table table-hover">
            <tr>
                <th colspan="2" align="center" class="table-success">/envirovue/battery</th>
            </tr>
            <tr>
                <td>MacAddress:</td>
                <td>
                    @Html.TextBoxFor(m => m.MacAddress, 
                        new Dictionary<string, object>
                        {
                            {"data-toggle", "tooltip"},
                            {"title", DisplayAttributeExtension.GetPropertyDescription(() => Model.MacAddress)}
                        })
                </td>
            </tr>
            <tr>
                <td>BatteryLevel:</td>
                <td>
                    @Html.EditorFor(m => m.BatteryLevel, new { htmlAttributes = new { @min = "0", @max = "100" } })
                </td>
            </tr>
            <tr>
                <td><input type="submit" value="Set Battery" class="btn btn-primary"/></td>
                <td></td>
            </tr>

        </table>
    }
    <table class="table table-bordered">  
        <tr>
            <td class="table-success">
            @Html.DisplayNameFor(model => model.ResponseStatus)
            </td>
        </tr>  
        <tr>
            <td>
            @Html.DisplayFor(model => model.ResponseStatus)
            </td>
        </tr>  
        <tr>
            <td class="table-success">
            @Html.DisplayNameFor(model => model.JsonResponse)
            </td>
        </tr>  
        <tr>
            <td>
            @Html.DisplayFor(model => model.JsonResponse)
            </td>
        </tr>  
    </table> 
</body>
</html>